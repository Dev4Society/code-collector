{
  "name": "Code Collector",
  "description": "Save and customize code snippets from every website to your Code Pocket",
  "version": "0.1.0",
  "manifest_version": 3,
  "author": "Oscar Gonzalez",
  "background": {
    "service_worker": "/scripts/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["/styles/styles.css", "/styles/saveCode.css"],
      "js": ["/scripts/content.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": ["storage", "activeTab", "scripting", "tabs", "contextMenus"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_title": "Code Collector â€¢ Save and manage code snippets from the web",
    "default_popup": "/pages/popup.html",
    "default_icon": {
      "16": "/images/get_started16.png",
      "32": "/images/get_started32.png",
      "48": "/images/get_started48.png",
      "128": "/images/get_started128.png"
    }
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "MacCtrl+Shift+F"
      },
      "description": "Opens popup.html"
    }
  },
  "icons": {
    "16": "/images/get_started16.png",
    "32": "/images/get_started32.png",
    "48": "/images/get_started48.png",
    "128": "/images/get_started128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [ "*.html", "*.png" ],
      "matches": [ "<all_urls>" ]
    }
  ]
}
